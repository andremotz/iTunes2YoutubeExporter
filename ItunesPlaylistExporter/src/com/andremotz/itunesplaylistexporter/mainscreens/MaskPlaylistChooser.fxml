<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="com.andremotz.itunesplaylistexporter.mainscreens.PlaylistChooserController">
  <children>
    <VBox spacing="10.0">
      <children>
        <Label fx:id="lblHeadline" text="Choose your iTunes Playlist to process" textAlignment="CENTER" />
        <ComboBox fx:id="comboPlaylists" />
        <HBox spacing="10.0">
          <Button fx:id="btnBack" mnemonicParsing="false" onAction="#handleBtnBackAction" text="Back" />
          <Button fx:id="btnNext" mnemonicParsing="false" onAction="#handleBtnNextAction" text="Next" />
        </HBox>
      </children>
      <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
    </VBox>
  </children>
</AnchorPane>
