<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="com.andremotz.itunesplaylistexporter.mainscreens.LibraryChooserController">
  <children>
    <VBox spacing="10.0">
      <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
      <children>
        <Label fx:id="lblLibraryPath" text="Choose your iTunes-library:" />
        <HBox spacing="10.0">
          <children>
            <TextField fx:id="textInputPath" />
            <Button id="button" fx:id="btnBrowse" onAction="#handleBtnBrowseAction" text="browse" />
          </children>
        </HBox>
        <Button fx:id="btnNext" mnemonicParsing="false" onAction="#handleBtnNextAction" text="Next" />
      </children>
    </VBox>
  </children>
</AnchorPane>
